!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Limelight:400|Playfair+Display:400,700,,900,400italic,700italic|Sorts+Mill+Goudy:400|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300|Raleway:200,300,400,600,400italic|Roboto:300,400')
      link(rel='stylesheet', href='/css/main.css')
  body(class=bodyclass)
    div.head-text
      a(href=locals.url)=locals.name
    div.head-desc
        a Developer . Designer . Dreamer
     div.img-wrap
      img(src='/css/MyLogo3.png')
    div.nav-pos
      nav
        ul
            for item in locals.menu
                li.li-style
                    a.internal(href=item.url, title=item.description) #{ item.name } 
    div.blog-div
        span.blog-about "Ruminations on code, pixels and more -
        span.blog-name  The Sign of Three.
        span.blog-end "
    
    block header
            
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
