block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  div.content-wrap
    article.article.intro
      header
        p.date
          span= moment.utc(page.metadata.date).format('DD. MMMM YYYY')
        h2
          a=page.title

block content
  article.article
    section.content!= typogr(page.html).typogrify()

